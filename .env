# Backend Configuration

# Project
DEBUG=True

# Database (SQLite for development, PostgreSQL for production)
# For SQLite: remove or comment out DATABASE_URL to use default SQLite
# For PostgreSQL: uncomment and set your connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/attrition_db
DATABASE_URL=sqlite:///./attrition_db.db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000", "http://127.0.0.1:8000"]

# File uploads
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=backend/uploads
ALLOWED_EXTENSIONS=[".xlsx", ".xls", ".csv"]

# ML Model paths
MODEL_PATH=backend/models
MODEL_NAME=best_model.pkl
LABEL_ENCODERS_PATH=backend/models/label_encoders.pkl
SCALER_PATH=backend/models/scaler.pkl
FEATURE_COLUMNS_PATH=backend/models/feature_columns.pkl

# Risk thresholds
HIGH_RISK_THRESHOLD=0.7
MEDIUM_RISK_THRESHOLD=0.4

# API
API_PREFIX=/api

# AWS (Optional - for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=
